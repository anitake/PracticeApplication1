@model PracticeApplication1.Models.Product

@{
    ViewBag.Title = "Create";
}

<h2>新增產品資訊</h2>

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    <div class="form-horizontal">
        <h4>產品資訊內容</h4>
        <hr />
        
        <div class="form-group">
           
                <div class="form-group">
                    @Html.LabelFor(p=>p.ProductID,new {@class="col-sm-2 control-label" })

                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.ProductID, new { @class = "form-control", placeholder = "ProductID" })
                </div>
            </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.CategoryID, new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @{
                            var categories = new SelectList(ViewBag.category, "CategoryID");
                        }
                        @Html.DropDownListFor(p => p.CategoryID, categories, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.ModelNumber, new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(p => p.ModelNumber, new { @class = "form-control", placeholder = "ModelNumber" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.ModelName, new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(p => p.ModelName, new { @class = "form-control", placeholder = "ModelName" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.ProductImage, new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        ///TODO： 上傳檔案 沒有成功
                        @Html.TextBoxFor(p => p.ProductImage, new { @class = "form-control", placeholder = "ProductImage", type = "file" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.UnitCost, new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(p => p.UnitCost, new { @class = "form-control", placeholder = "UnitCost" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.Description, new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })
                        @*@Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })*@
                    </div>
                </div>
                @*<div class="form-group">
                @Html.LabelFor(p => p.BytesImage, new { @class = "col-sm-2 control-label" })

                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.BytesImage, new { @class = "form-control", placeholder = "BytesImage" })
                </div>
            </div>*@
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="新增" class="btn btn-default" />
                </div>
            </div>
    </div>
}

